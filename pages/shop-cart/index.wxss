page {
    min-height: 100%;
    background-color: #F2f2f2;
}

.container {
    background-color: #F2f2f2;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.no-product-icon {
    width: 100rpx;
    height: 100rpx;
    margin-top: 300rpx;
}

.title-box {
    width: 100vw;
    margin-top: 30rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999;
    margin-bottom: 50rpx;
}

.to-index-btn {
    color: #fff;
    background: #e64340;
    border-radius: 6px;
    width: 300rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 28rpx;
}

.products-over {
    width: 100%;
    background-color: #fff;
    padding-bottom: 100rpx;
}

.products {
    width: 100%;
    overflow: hidden;
    position: relative;
  }