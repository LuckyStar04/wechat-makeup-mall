page {
    min-height: 100%;
    background-color: #F2f2f2;
}

.container {
    background-color: #F2f2f2;
    height: 100%;
    padding: 0px;
    display: block;
    overflow: scroll;
}

.empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.empty-icon {
    width: 100rpx;
    height: 100rpx;
    margin-top: 300rpx;
}

.empty-box {
    width: 100vw;
    margin-top: 30rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999;
    margin-bottom: 50rpx;
}

.to-index-btn {
    color: #fff;
    background: #e64340;
    border-radius: 6px;
    width: 300rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 28rpx;
}

.cart-title {
    background-color: transparent;
    padding: 15rpx 40rpx 0rpx;
    font-size: 36rpx;
    font-weight: 400;
}

.products-box {
    background-color: #f2f2f2;
    overflow: hidden;
    padding: 8rpx 30rpx 100rpx;
}

.products {
    width: 700rpx;
    height: 240rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
    background-color: #fff;
    border-radius: 30rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.p-left {
    padding: 5rpx;
}

.p-img {
    width: 160rpx;
    height: 160rpx;
    border-radius: 16rpx;
}

.p-middle {
    height: 100%;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    padding-left: 10rpx;
}

.p-right {
    height: 100%;
    position: relative;
}

.p-name {
    display: block;
    width: 350rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    word-break: keep-all;
    font-size: 32rpx;
    margin-top: 45rpx;
}

.p-price {
    font-size: 26rpx;
    color: red;
    margin-top: 10rpx;
}

.checkout-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    border-bottom: 1px solid #eee;
    border-top: 1px solid #eee;
    background-color: #fff;
    z-index: 999;
}

.checkout-left {
    display: inline;
    margin-left: 30rpx;
}

.checkout-right {
    display: flex;
    flex-flow: row;
    align-items: center;
}

.submit-btn {
    padding: 0 15rpx 0;
}

.submit-btn > .van-button > .van-button__text{
    font-size: 32rpx !important;
}

.pay-btn.no-select {
    background-color: #ccc;
}

.checkout-box .left-price {
    display: flex;
    width: 510rpx;
    justify-content: space-between;
    line-height: 100rpx;
    padding: 0 30rpx 0 32rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}

.select-all {
    font-size: 32rpx;
    margin-left: 15rpx;
}

.checkout-box .total {
    color: #e64340;
    font-size: 32rpx;
}

.money-small {
    font-size: 28rpx;
    margin-left: 5rpx;
}

.money-large {
    font-size: 44rpx;
    font-weight: 500;
}

.radio-box {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 8rpx;
}

.del-btn {
  position: absolute;
  right: 15rpx;
  top: 45rpx;
  width: 50rpx;
  height: 50rpx;
}
.number-box {
    width: 164rpx;
    height: 48rpx;
    line-height: 48rpx;
    position: absolute;
    right: 30rpx;
    bottom: 25rpx;
    display: flex;
    /*justify-content: space-between;*/
    font-size: 24rpx;
    text-align: center;
}

.minus-btn {
    width: 48rpx;
    height: 100%;
    border-left: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    border-bottom-left-radius: 6rpx;
    border-top-left-radius: 6rpx;
}

.minus-btn.disabled {
    background-color: #f5f5f9;
    border-left: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
    color: #ccc;
}

.plus-btn {
    width: 48rpx;
    height: 100%;
    border-right: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    border-bottom-right-radius: 6rpx;
    border-top-right-radius: 6rpx;
}

.plus-btn.disabled {
    background-color: #f5f5f9;
    border-right: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
    color: #ccc;
}

.number-box input {
    width: 68rpx;
    height: 48rpx;
    min-height: 48rpx;
    text-align: center;
    font-size: 24rpx;
    border: 1rpx solid #ccc;
}