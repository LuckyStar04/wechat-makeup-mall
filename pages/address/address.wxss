@import '/weui/weui.wxss';

page {
  background-color: #f2f2f2;
}

.bottom-box {
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) / 2 + 20rpx);
}

.bottom-box .van-button {
  width: 70vw;
}

.address-outer {
  overflow: scroll;
}

.address-box {
  background-color: white;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 32rpx 20rpx;
}

.address {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
}

.address-1 {
  display: inline;
}

.address-default {
  margin-right: 20rpx;
}

.address-city {
  font-size: 26rpx;
}

.address-detail {
  font-size: 40rpx;
  font-weight: 700;
}

.address-empty {
  font-size: 34rpx;
  padding-left: 15rpx;
}

.address-3 {
  font-size: 26rpx;
}

.phone {
  margin-left: 20rpx;
}