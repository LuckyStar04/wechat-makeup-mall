page {
  background-color: #f2f2f2;
}

.coupons {
  margin-top: 28rpx;
  margin-left: 24rpx;
  width: 700rpx;
  height: 220rpx;
  position: relative;
}

.coupon-bg {
  width: 700rpx;
  height: 220rpx;
  position: absolute;
  left: 0px;
  top: 0px;
}

.no-coupon {
  width: 130rpx;
  height: 130rpx;
  position: absolute;
  right: 0px;
  bottom: 0px;
}

.coupon {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #f2f2f2;
  background-color: transparent;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 700rpx;
  height: 220rpx;
}

.coupon-left {
  height: 100%;
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.c-left-title {
  display: flex;
  align-items: center;
  justify-content: center;
}

.c-left-condition {
  font-size: 32rpx;
  margin: -12rpx 0 12rpx;
}

.coupon-middle {
  height: 100%;
  width: 54%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.c-middle-title {
  font-size: 44rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
}

.coupon-right {
  height: 80%;
  width: 13%;
  border-left: 1px dashed #f2f2f2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.coupon-get {
  font-size: 36rpx;
  width: 36rpx;
  font-weight: 500;
  margin-right: 5rpx;
}

.flex-item {
  align-items: center;
  justify-content: center;
}