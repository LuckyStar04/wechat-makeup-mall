@import "/template/login/index.wxss";

page,view,image,input,textarea {
  display: block;
  box-sizing: border-box;
}

.container {
    background-color: #F2f2f2;
    min-height: 100%;
    padding-top: 0;
    padding-bottom: 100rpx;
  }
  .swiper-container{
    width: 100%;
    position: relative;  
  }
  .swiper_box {
    width: 100%;
    height:748rpx;
  }
  
  swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
    height:748rpx;
  }

  
.products-info{
  background-color: #fff;
  padding-top: 35rpx;
  width: 100%;
  position: relative;
}
.products-info-fx {
  position: absolute;
  right: 35rpx;
  bottom: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 130rpx;
}
.products-info-fx .item {
  width: 50rpx;
  height: 50rpx;
  right: 130rpx;
  top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background: #fff;
  z-index: 20;
} 
.products-info-fx .item image {
  width: 50rpx;
  height: 50rpx;
}
.products-info-fx .item button {
  position: absolute;
  height: 100%;
  width: 100%;
  opacity: 0;
  z-index: 99;
}
.products-info .products-title{
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 1.4;
  color: #000;
  margin-bottom: 28rpx;
}
.products-info .products-share{
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 25rpx;
  line-height: 1.4;
  color: #CC0000;
  margin-bottom: 28rpx;
}
.products-profile {
  display: flex;
  align-items:center;
}
.products-profile .p{
   color:#e64340;
   font-size: 20pt;
   margin-left: 30rpx;
}
.products-profile .p text{
   font-size: 12pt;
}
.products-profile .r{
   color:#ccc;
   font-size: 10pt;
   margin-left: 30rpx;
}
.products-des-info{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.label-title{
  font-size:32rpx;
  color:#000000;
  padding: 30rpx;
}
.products-text{
  padding: 30rpx;
  font-size:28rpx;
  color:#666666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
}
.products-text image{
  width: 100%;
}
.line{
  width: 690rpx;
  margin: 0 30rpx;
  height: 2rpx;
  background: #f2f2f2;
}
.popup-title {
  text-align:center;
  padding: 40rpx 60rpx 0rpx;
  font-size:34rpx;
  font-weight:500;
}
.popup-text {
  text-align:center;
  padding: 10rpx 60rpx 40rpx;
  font-size:30rpx;
  font-weight:400;
  color:#666;
}
.popup-button {
  font-size:34rpx;
  font-weight:500;
  color:#ee0a24;
}