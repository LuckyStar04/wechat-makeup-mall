.category-box {  
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 20px;
  /*box-shadow: 0px 2px 5px #efeff4; */
}
.category-list{
  width:150rpx;
  margin-top:20rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.category-column{
  width:100%;
  margin-top:20rpx;
  overflow: hidden;
}
.category-imgbox{
  width:110rpx;
  height:110rpx;
}
.category-title{
  font-size: 24rpx;
  text-align:center;
  margin-top:15rpx;
}
.notice-bar {
  border-bottom: 1rpx solid #efeff4;
}
.index-container {
  background-color: #f2f2f2;
  min-height: 100%;
  display: block;
}
.index-title {
  background-color: #f2f2f2;
  padding: 20rpx 30rpx 0rpx;
  font-size: 38rpx;
  font-weight: 300;
}
.products-container {
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 24rpx;
  background-color: #F2f2f2;
}
.products-box{
  width: 339rpx;
  height: 472rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
  border-radius:5px;
}
.products-box .img-box{
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}
.products-box .img-box image{
   width: 339rpx;
   height: 339rpx;
}
.products-box .products-title{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 0rpx 0;
  color:#000;
  margin-left: 24rpx;
}
.products-box .products-price{
  width: 280rpx;
  overflow: hidden;
  font-size: 30rpx;
  padding: 18rpx 0;
  color:#e64340;
  margin-left: 24rpx;
}
.coupons-float {
  position: fixed;
  right:15rpx;
  bottom:80rpx;
  width:80rpx;
  height:80rpx;
  background-color: #fff;
  text-align: center;
  border-radius:50%;
  border: 1rpx solid #ddd;
}
.coupons-float image {
  width:60rpx;
  height:60rpx;
  margin-top: 10rpx;
}
.font-30rpx {
  font-size: 30rpx;
}
.shadow-bottom {
  height: 20rpx;
  width: 100%;
  background-image: linear-gradient(#fff, #f2f2f2);
}